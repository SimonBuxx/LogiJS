  .slogan-container(style="margin-top: 150px;")
    h1.background-text #{background_text}
  .login_container
    - var error = parseInt(error_code);
    form.SignUp.login-background
      case error
        when 1: p.login-message #{localization.username_invalid}
          span(style="color: #c83232;") .
        when 2: p.login-message #{localization.email_invalid}
          span(style="color: #c83232;") .
        when 3 
          p.login-message #{localization.password_invalid}
            span(style="color: #c83232;") .
          p.login-message.password-tipps #{localization.password_rules}
            span(style="color: #c83232;") .
        when 4: p.login-message #{localization.username_taken}
          span(style="color: #c83232;") .
        default: h1.login_title #{localization.register}
          span(style="color: #c83232;") .
      p
        input.username(type='text', placeholder=localization.username)
        br
        input.email(type='text', placeholder=localization.email)
        br
        input.password(type='password', placeholder=localization.password)
        br
        input.btn.btn-lg.btn-orange.login-confirm-button(type='submit', value=localization.register, role='button')
      p.login-redirect-text
        | #{localization.already_signed_up} 
        a.login-redirect-text(href='/') #{localization.login}
      br
  .footer_bottom.footer_bottom_absolute
      .footer_bottom_content
        .footer_box.footer_box_outer
          if refer_to_logijs_com
            a(rel='nofollow', href='https://logijs.com/', target='_blank') <i class="fa fa-external-link-alt" style="color: #c83232;"></i> #{localization.switch_to_logijs_com}
        .footer_box.footer_box_inner
        .footer_box.footer_box_outer.footer_right
